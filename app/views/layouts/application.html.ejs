<!DOCTYPE html>
<html>
  <head>
    <title>Tenderloin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="tenderloin" content="you know you like it">
    <!-- Bootstrap -->
    <%- stylesheet_include('bootstrap.min', 'tenderloin') %>
    <%- javascript_include('jquery-1.9.1.min', 'bootstrap.min', 'lodash.min') %>
  </head>
  <body>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="brand" href="/">Tenderloin</a>
        
        <% if (is_logged_in()) { %>
          <ul class="nav pull-right">
            <li id="install-golden-gate" class="hide"><a href="/golden-gate/latest.crx"><span class="badge badge-success">Install Golden Gate</span></a></li>
            <li><a href="/scripts">Scripts</a></li>
            <li><a href="/auth/logout">Logout</a></li>
          </ul>
        <% } %>
        </div>
      </div>
    </div>

    <%- yield() %>

    <footer>
      <p>Made with Love. &copy; 2013. Find us on Github: <a href="https://github.com/patrickod/tenderloin">Tenderloin</a>, <a href="https://github.com/mattinsler/golden-gate">Golden Gate</a></p>
    </footer>
    
    
    <div id="install-golden-gate-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="modal-header">
        <h3>How to install Golden Gate</h3>
      </div>
      <div class="modal-body">
        <p>Go to <code>chrome://extensions</code> and drag the crx file you just downloaded onto the page.</p>
      </div>
      <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      </div>
    </div>
    
    
    <script>
      $(function() {
        setTimeout(function() {
          if (!$('body').hasClass('golden-gate-installed')) {
            $('#install-golden-gate').fadeIn(2000).on('click', function() {
              $('#install-golden-gate-modal').modal('show');
            });
          }
        }, 1000);
      });
    </script>
  </body>
</html>
